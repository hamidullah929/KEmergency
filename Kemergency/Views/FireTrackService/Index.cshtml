@model IEnumerable<Kemergency.ViewModels.FireTrackServiceViewModeel>


<script src="~/js/site.js"></script>

<div class="sectionLight">
    <div class="row">
        <div class="col-sm-12">
            <div class="jumbotron jumbotron-fluid">
                <div class="container-fluid">
                    <h1 class="display-4">د کندهار ښار ایمرجنسي خدمات</h1>
                    <p class="lead">ناسو کولای سي چي امبولانس او اطفایه پر وخت راوغواړی</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col"></div>
        <div class="col-sm-12 col-md-10">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100 slidimg" src="~/MainLaout/img/th.jpg" alt="First slide">
                        <div class="carousel-caption d-nonn d-md-block">
                            <h3>امبولانس</h3>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 slidimg" src="~/MainLaout/img/th.jpg" alt="Second slide">
                        <div class="carousel-caption d-nonn d-md-block">
                            <h3>اطفایه</h3>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 slidimg" src="~/MainLaout/img/th.jpg" alt="Third slide">
                        <div class="carousel-caption d-nonn d-md-block">
                            <h3>ډاکټر</h3>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col"></div>
    </div>
</div>

<div class="sectionService">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">زموږ خدمات</h1>
            <p class="lead">ناسو کولای سي چي امبولانس او اطفایه پر وخت راغواړی</p>
        </div>
    </div>
</div>
