                <div class="col-md-4 col-sm-6 detailInfo">
                    <table>
                        <tr>
                            <td class="itemLabel"> مرکزۍ نمبر :@Html.DisplayFor(modelItem => item.phoneNumber) </td>
                        
                        </tr>
                           
                        @*<tr>
                                <td class="itemLabel">
