</div>

<div class="text-center wow fadeInUp" data-wow-delay="0.1s">
    <h6 class="section-title bg-white text-center text-primary px-3">خدمات</h6>
    <h1 class="mb-5">خدمات راوغواړي</h1>
</div>



@foreach (var item in Model)
{
    <div class="card mb-3 m-5">
        <div class="card-header" >
            <h2 style="float: right"> @Html.DisplayFor(modelItem => item.Name)</h2>
        </div>
        <div class="card-body m-3">

            <div class="row m-3">
                <div class="col-md-8 col-sm-6">
                    <div>

                        <div class="branchContact">
                            <div><b> ادرس </b>:@Html.DisplayFor(modelItem => item.Address) </div>
                            <br />
                            <div><b>  موټروان </b>:@Html.DisplayFor(modelItem => item.DriverName)  </div>
                            <br />

                        </div>
                       

                     
                    </div>
                </div>
                <div class="col-md-4  col-sm-6">

                    <div class="branchContact">
                        <div><b> مرکزۍ نمبر </b>:@Html.DisplayFor(modelItem => item.phoneNumber) </div>
                        <br />
                        <div> <b> موټروان نمبر </b>:@Html.DisplayFor(modelItem => item.DriverName)  </div>
                        <br />
                        <div>
                            <a class="btn btn-primary" asp-action="Edit" asp-controller="FireTrackService" asp-route-Id="@item.Id">خدمات راوغواړي</a>

                        </div>
                    </div>
                   
                    <div class="modal fade" id="myModal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                                    <h3 class="modal-title"></h3>
                                </div>
                                <div class="modal-body" id="myModalBodyDiv">


                                </div>
                                <div class="modal-footer">
                                    <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>

                                </div>

                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}






                    @section Scripts{
                        <script>



                            var ShowEmployee = function (employeeId) {

                                var url = "/FireTrackService/Edit?Id=" + employeeId;

                                $("#myModalBodyDiv").load(url, function () {
                                    $("#myModal").modal("show");

                                })
                            }
                        </script>
                    }







