
@model IEnumerable<Kemergency.ViewModels.BookingViewModel>



<script src="~/js/site.js"></script>

@{
    ViewBag.title = "Services";
}
<div class="sectionLight">
    <div class="row">
        <div class="col-sm-12">
            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h1 class="display-4">د کندهار ښار ایمرجنسي خدمات</h1>
                    <p class="lead">ناسو کولای سي چي امبولانس او اطفایه پر وخت راوغواړی</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col"></div>
        <div class="col-sm-12 col-md-10">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100 slidimg" src="~/MainLaout/img/th.jpg" alt="First slide">
                        <div class="carousel-caption d-nonn d-md-block">
                            <h3>امبولانس</h3>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 slidimg" src="~/MainLaout/img/th.jpg" alt="Second slide">
                        <div class="carousel-caption d-nonn d-md-block">
                            <h3>اطفایه</h3>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 slidimg" src="~/MainLaout/img/th.jpg" alt="Third slide">
                        <div class="carousel-caption d-nonn d-md-block">
                            <h3>ډاکټر</h3>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col"></div>
    </div>
</div>

<div class="sectionService">
    <div class="jumbotron jumbotron-fluid"  >
        <div class="container">
            <h1 class="display-4">زموږ خدمات</h1>
            <p class="lead">ناسو کولای سي چي امبولانس او اطفایه پر وخت راوغواړی</p>
        </div>
    </div>
</div>
@foreach (var item in Model)
{
    <div class="container">
        <div class="header clearfix detailHeading">
        </div>
        <div class="jumbotron"  id="customejumbo">

            <div class="row branchInfo">
                <div class="col-md-8 col-sm-6">
                    <div>
                        <h2> @Html.DisplayFor(modelItem => item.ServicesName)</h2>
                        <div class="branchContact">
                            <div id="branchAddress">ادرس:@Html.DisplayFor(modelItem => item.Address) </div>
                            <div id="branchTel">هسپتال نوم:@Html.DisplayFor(modelItem => item.HospitalName) </div>
                            <div id="branchTel">ټلیفون:@Html.DisplayFor(modelItem => item.Phone) </div>
                        </div>
                        <div id="branchDescription">
                            <p class="caption"></p>
                        </div>

                        <div id="branchHours">
                            <ul>
                                @*@foreach (var day in )
                                    {
                                        <li></li>
                                    }*@
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-4  col-sm-6 detailInfo ">
                    <table>
                        <tr>
                            <td class="itemLabel">کاري وخت: @Html.DisplayFor(modelItem => item.OpenTime) </td>

                        </tr>
                        <tr>
                            <td class="itemLabel">
                                 دبندولو وخت:@Html.DisplayFor(modelItem => item.CloseTime)
                            </td>
                        </tr>
                        <tr>
                            <td class="itemLabel">
                               دامبو لانسونو تعداد:@Html.DisplayFor(modelItem => item.AvaliableAmbuliance)
                            </td>
                        </tr>
                        <tr>
                            @if (item.HospitalStaus == "Open")
                            {
                                <td class="itemLabel"> حالت: <span class="badge-success">  @Html.DisplayFor(modelItem => item.HospitalStaus)</span> </td>
                            }
                            else
                            {
                        <td class="itemLabel">حالت:<span class="badge-danger">@Html.DisplayFor(modelItem => item.HospitalStaus)</span> </td>

                            }

                        </tr>
                        <tr>
                            <td>
                                <a class="btn btn-primary" asp-action="BookingEdti" asp-controller="Hospitals" asp-route-Id="@item.Id"> خدمات راوغواړي</a>
                            </td>

                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
}












