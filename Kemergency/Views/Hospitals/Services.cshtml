                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center wow fadeInUp" data-wow-delay="0.1s">
    <h6 class="section-title bg-white text-center text-primary px-3">خدمات</h6>
    <h1 class="mb-5">خدمات راوغواړي</h1>
</div>

@foreach (var item in Model)
{
    <div class="card mb-3 m-5">
        <div class="card-header" >
            <h2 style="float: right"> @Html.DisplayFor(modelItem => item.ServicesName)</h2>
        </div>
        <div class="card-body m-3">

            <div class="row m-3">
                <div class="col-md-8 col-sm-6">
                    <div>

                        <div class="m-3">
                            <div> <b>ادرس:</b>   @Html.DisplayFor(modelItem => item.Address) </div>
                            <br />
                            <div><b>هسپتال نوم</b>:@Html.DisplayFor(modelItem => item.HospitalName) </div>
                            <br />
                            <div><b>ټلیفون</b>:@Html.DisplayFor(modelItem => item.Phone) </div>
                        </div>


                        <div id="branchHours">
                            <ul>
                                @*@foreach (var day in )
                                    {
                                        <li></li>
                                    }*@
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-4  col-sm-6">

                    <div class="m-3">
                        <div> <b>کاري وخت:</b>   @Html.DisplayFor(modelItem => item.OpenTime) </div>
                        <br />
                        <div><b>دبندولو وخت</b>:@Html.DisplayFor(modelItem => item.CloseTime) </div>
                        <br />
                        <div><b>دامبو لانسونو تعداد</b>:@Html.DisplayFor(modelItem => item.AvaliableAmbuliance) </div>


                        <div style="margin-top: 6px">
                            <a class="btn btn-primary" asp-action="BookingEdti" asp-controller="Hospitals" asp-route-Id="@item.Id"> خدمات راوغواړي</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
  
    </div>
}







