
@model IEnumerable<Kemergency.ViewModels.BookingViewModel>



<script src="~/js/site.js"></script>

@{
    ViewBag.title = "Services";
}
<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(~/MainLayout/images/hero_1.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">

            <div class="col-md-12" data-aos="fade-up" data-aos-delay="400">

                <div class="row justify-content-center mb-4">
                    <div class="col-md-8 text-center">
                        <h1> دکندهار شار امیرجنسي خدمات</h1>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="container mt-5">
    <div class="row mb-5 mt-12 justify-content-center">
        <div class="col-md-8 text-center">
            <h2 class="text-black h1 site-section-heading text-center">زمز خدمات</h2>
            <p class="lead">
               
            </p>
        </div>
    </div>
   </div>
        @foreach (var item in Model)
        {
            <div class="container">
                <div class="header clearfix detailHeading">
                </div>
                <div class="jumbotron">

                    <div class="row branchInfo">
                        <div class="col-md-8">
                            <div>
                                <h2> @Html.DisplayFor(modelItem => item.ServicesName)</h2>
                                <div class="branchContact">
                                    <div id="branchAddress">Address:@Html.DisplayFor(modelItem => item.Address) </div>
                                    <div id="branchTel">Hospital:@Html.DisplayFor(modelItem => item.HospitalName) </div>
                                    <div id="branchTel">Telephone:@Html.DisplayFor(modelItem => item.Phone) </div>
                                </div>
                                <div id="branchDescription">
                                    <p class="caption"></p>
                                </div>

                                <div id="branchHours">
                                    <ul>
                                        @*@foreach (var day in )
                                            {
                                                <li></li>
                                            }*@
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 detailInfo">
                            <table>
                                <tr>
                                    <td class="itemLabel">Hospital Opened: @Html.DisplayFor(modelItem => item.OpenTime) </td>

                                </tr>
                                <tr>
                                    <td class="itemLabel">
                                        Hospital close:@Html.DisplayFor(modelItem => item.CloseTime)
                                    </td>
                                </tr>
                                <tr>
                                    <td class="itemLabel">
                                        Number Of Ambuliance:@Html.DisplayFor(modelItem => item.AvaliableAmbuliance)
                                    </td>
                                </tr>
                                <tr>
                                    @if (item.HospitalStaus == "Open")
                                    {
                                        <td class="itemLabel"> Hospital Status: <span class="badge-success">  @Html.DisplayFor(modelItem => item.HospitalStaus)</span> </td>
                                    }
                                    else
                                    {
                                        <td class="itemLabel">Hospital Status:<span class="badge-danger">@Html.DisplayFor(modelItem => item.HospitalStaus)</span> </td>

                                    }

                                </tr>
                                <tr>
                                    <td>
                                        <a class="btn btn-primary" asp-action="BookingEdti" asp-controller="Hospitals" asp-route-Id="@item.Id">Book Services</a>
                                    </td>

                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }












