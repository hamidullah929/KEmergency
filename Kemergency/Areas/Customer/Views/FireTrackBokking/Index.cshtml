@model IEnumerable<Kemergency.ViewModels.FireTrackBookingViewModel>

<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">نیول سوي خدمات</h6>
                </div>
            </div>
            <div class="card-body ">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered" id="sampleTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ServicesName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FireTrackNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DriverName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DriverNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Bookingtime)
                                </th>

                                <th>
                                    تاید
                                </th>


                                <th>  عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ServicesName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FireTrackNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DriverName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DriverNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Bookingtime)
                                    </td>

                                    @if (item.confirmed == true)
                                    {
                                <td>
                                    <span class="badge badge-sm bg-gradient-success">تاید</span>
                            
                                </td>
                                    }
                                    else
                                    {
                                <td>
                                    <span class="badge badge-sm bg-gradient-danger">ناتاید</span>
                                </td>

                                    }


                                    <td>

                                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-map"> </i></a> |
                                        <a href="#" onclick="ShowEmployee('@item.Id')"><i class="fa fa-pencil"></i> </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>


                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>

                    <div class="modal fade" id="myModal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                                    <h3 class="modal-title"></h3>
                                </div>
                                <div class="modal-body" id="myModalBodyDiv">


                                </div>
                                <div class="modal-footer">
                                    <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>

                                </div>

                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>








@section Scripts{
    <script>

        $(document).ready(function () {
            $("#sampleTable").DataTable({
                "language": {
                    "loadingRecords": "صفحي ...",
                    "lengthMenu": "صفحی _MENU_ ",
                    "zeroRecords": "لم يعثر على أية سجلات",
                    "info": "صفحه _START_ تر _END_  پوري د_TOTAL_ ",
                    "search": "پلټل:",
                    "paginate": {
                        "first": "اول",
                        "previous": "مخکی",
                        "next": "راتلونکي",
                        "last": "اخیري"
                    },

                }
            });
        })

        var ShowEmployee = function (employeeId) {

            var url = "/customer/FireTrackBokking/Details?Id=" + employeeId;

            $("#myModalBodyDiv").load(url, function () {
                $("#myModal").modal("show");

            })

            //Or
            //$.ajax({

            //    type: "POST",
            //    url: "/Test/ShowEmployee",
            //    data: { EmployeeId: employeeId },
            //    success: function (response) {

            //        $("#myModalBodyDiv").html(response);

            //        $("#myModal").modal("show");


            //    }

            //})
        }
    </script>

}


