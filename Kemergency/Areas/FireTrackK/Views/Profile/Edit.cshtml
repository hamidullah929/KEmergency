@model Kemergency.Models.Myusers
@{
    ViewData["Title"] = "Edit";

}
<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">معلومات</h6>
                </div>
            </div>
            <div class="card-body ">
                        <form asp-action="EditUser">
                            <div class="row">
                                <div class="col-lg-6 mt-5">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="Id" />
                                    <div class="form-group input-group input-group-outline mb-5">
                                        <label asp-for="Name" class="control-label  form-label"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group input-group input-group-outline">
                                        <label asp-for="Phone" class="control-label  form-label"></label>
                                        <input asp-for="Phone" class="form-control" />
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                  
                                </div>
                                <div class="col-lg-6 mt-5 ">
                                    <div class="form-group input-group input-group-outline mb-5">
                                        <label asp-for="Address" class="control-label  form-label"></label>
                                        <input asp-for="Address" class="form-control" />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>

                                  
                                            <div class="form-group input-group input-group-outline">
                                                <label asp-for="NicNubmer" class="control-label form-label"></label>
                                                <input asp-for="NicNubmer" class="form-control" />
                                                <span asp-validation-for="NicNubmer" class="text-danger"></span>
                                            </div>
                                      
                                   
                                </div>

                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary mt-3">معلومات تغیر کړي</button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
       </div>
 

