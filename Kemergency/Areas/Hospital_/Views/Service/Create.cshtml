@model Kemergency.Models.Hservice

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Hospital_/Views/Shared/_Layout.cshtml";
}
<script src="~/toastr.js/toastr.min.js"></script>
<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">معلومات</h6>
                </div>
            </div>
            <div class="card-body ">
                <form id="contactForm" asp-action="CreateService" asp-controller="Service" asp-area="Hospital_">

                    <div class="row">
                        <div class="col-lg-6">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group input-group input-group-outline mb-3">
                                <label asp-for="Name" class="control-label  form-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group input-group input-group-outline mb-3">
                                <label asp-for="DrvierName" class="control-label  form-label "></label>
                                <input asp-for="DrvierName" class="form-control" />
                                <span asp-validation-for="DrvierName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group  input-group input-group-outline mb-3">
                                <label asp-for="AvaliableAmbulianc" class="control-label form-label"></label>
                                <input asp-for="AvaliableAmbulianc" class="form-control" />
                                <span asp-validation-for="AvaliableAmbulianc" class="text-danger"></span>
                            </div>
                            <div class="form-group  input-group input-group-outline mb-3">
                                <label asp-for="DriverNumber" class="control-label form-label "></label>
                                <input asp-for="DriverNumber" class="form-control" />
                                <span asp-validation-for="DriverNumber" class="text-danger"></span>
                            </div>

                        </div>

                    </div>
                    <div class="form-group">
                        <input type="submit" value="اضافه کړي" class="btn btn-primary" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
