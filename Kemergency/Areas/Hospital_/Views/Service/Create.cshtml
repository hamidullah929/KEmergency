@model Kemergency.Models.Hservice

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Hospital_/Views/Shared/_Layout.cshtml";
}
<script src="~/toastr.js/toastr.min.js"></script>
<main class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="fa fa-edit"></i> Add services</h1>

        </div>

    </div>
    <div class="row">
        <div class="col-md-12">
            <form id="contactForm" asp-action="CreateService" asp-controller="Service" asp-area="Hospital_">

                <div class="row">
                    <div class="col-lg-6">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DrvierName" class="control-label"></label>
                            <input asp-for="DrvierName" class="form-control" />
                            <span asp-validation-for="DrvierName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label asp-for="AvaliableAmbulianc" class="control-label"></label>
                            <input asp-for="AvaliableAmbulianc" class="form-control" />
                            <span asp-validation-for="AvaliableAmbulianc" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DriverNumber" class="control-label"></label>
                            <input asp-for="DriverNumber" class="form-control" />
                            <span asp-validation-for="DriverNumber" class="text-danger"></span>
                        </div>

                    </div>

                </div>
                <div class="form-group">
                    <input  type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>

        </div>
    </div>

</main>
