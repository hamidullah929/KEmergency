@model Kemergency.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Regester";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .formContainer {
        box-shadow: 4px 8px 16px #d7d7d7;
        padding: 20px;
        border-radius: 0px 0px 4px 4px;
      
       
    }

    input {
        box-shadow: none !important;
        outline: none;
    }

    #formHeading {
        background: #EC407A;
        margin: -20px;
        border-radius: 4px 4px 0px 0px
    }
 

</style>


<div class="p-4">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-6 col-lg-6 mx-auto">
                <div class="formContainer">
                    <h2 class="p-2 text-center mb-4 h4" id="formHeading">ثبت کول</h2>
                    <form asp-action="Regester" class="signin-form row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <input asp-for="Email" class="form-control" placeholder="بريښنالیک" />
                                    <span asp-validation-for="Email" class="text-danger"></span>

                                </div>

                                <div class="form-group mt-3">

                                    <input asp-for="NicNubmer" class="form-control" placeholder="تذکیري نمبر" />
                                    <span asp-validation-for="NicNubmer" class="text-danger"></span>

                                </div>
                                <div class="form-group mt-3">

                                    <input asp-for="ConfirmPassword" class="form-control" placeholder="رمز تاید کول" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="col-6">
                                <div class="form-group">

                                    <input asp-for="Name" class="form-control" placeholder="نوم" />
                                    <span asp-validation-for="Name" class="text-danger"></span>

                                </div>
                                <div class="form-group mt-3">

                                    <input asp-for="Phone" class="form-control" placeholder="تلیفون" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>

                                </div>
                                <div class="form-group mt-3">

                                    <input asp-for="Password" class="form-control" placeholder="رمز" />
                                    <span asp-validation-for="Password" class="text-danger"></span>

                                </div>

                            </div>
                        </div>





                        <input type="submit" value="ځان ثبت کړي" class="btn btn-primary btn-lg w-100 mt-4 mb-3" />
                    </form>
                    <a asp-action="Login" asp-controller="Account" asp-area="Identity" class="create-account"> ننوتل</a>

                </div>
            </div>

        </div>
    
    </div>
    
    </div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


